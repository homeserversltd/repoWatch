{
  "metadata": {
    "schema_version": "1.0.0",
    "name": "repoWatch",
    "description": "Linux-native git repository monitor with real-time file watching"
  },
  "paths": {
    "repo_path": ".",
    "config_dir": "~/.config/repowatch",
    "cache_dir": "~/.cache/repowatch",
    "state_file": "state.json"
  },
  "children": [
    "git-submodules",
    "committed-not-pushed",
    "dirty-files",
    "inotify-watcher",
    "three-pane-tui"
  ],
  "execution": {
    "mode": "parallel",
    "continue_on_error": false,
    "parallel": true
  },
  "config": {
    "session_timeout": 3600,
    "max_commits": 20,
    "animation_fps": 10,
    "ui_refresh_rate": 2,
    "terminal_width": 120,
    "terminal_height": 30
  }
}
