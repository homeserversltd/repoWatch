{
  "metadata": {
    "schema_version": "1.0.0",
    "name": "repoWatch File Watcher",
    "description": "Real-time file system monitoring using watchdog"
  },
  "paths": {},
  "children": [],
  "execution": {
    "mode": "sequential",
    "continue_on_error": true,
    "parallel": false
  },
  "config": {
    "watcher_settings": {
      "debounce_delay": 0.5,
      "max_events_per_second": 10,
      "event_buffer_size": 100,
      "recursive_watch": true
    },
    "ignore_patterns": {
      "directories": [
        ".git",
        "__pycache__",
        ".pytest_cache",
        "node_modules",
        ".next",
        "dist",
        "build",
        ".DS_Store"
      ],
      "files": [
        "*.swp",
        "*.swo",
        "~",
        "*.tmp",
        "*.bak",
        "*.pyc",
        ".DS_Store",
        "Thumbs.db"
      ]
    },
    "fallback_mode": {
      "polling_interval": 1.0,
      "use_polling": false
    }
  }
}