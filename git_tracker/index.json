{
  "metadata": {
    "schema_version": "1.0.0",
    "name": "repoWatch Git Tracker",
    "description": "Git repository status tracking and commit monitoring"
  },
  "paths": {
    "git_binary": "${GIT_BINARY:-git}",
    "git_config": "${HOME}/.gitconfig"
  },
  "children": [],
  "execution": {
    "mode": "sequential",
    "continue_on_error": true,
    "parallel": false
  },
  "config": {
    "git_settings": {
      "max_commits_history": 100,
      "status_check_interval": 1.0,
      "commit_date_format": "%Y-%m-%d %H:%M:%S",
      "file_status_symbols": {
        "modified": "M",
        "added": "A",
        "deleted": "D",
        "untracked": "?",
        "renamed": "R"
      }
    },
    "fallback_mode": {
      "use_subprocess": true,
      "require_gitpython": false
    }
  }
}
